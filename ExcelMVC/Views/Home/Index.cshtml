@model DataTable
@using System.Data

<div>

<h1>Excel Viewer</h1>

<p>Upload an Excel document to view it online</p>

</div>

<!-- Displays the File and Upload buttons -->
<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data" class="upload-form">
    <input type="file" name="file" />
    <input type="submit" value="Upload" />
</form>

@if (Model != null && Model.Rows.Count > 0)
{
    <table>
        <thead>
            <tr>
                @foreach (DataColumn column in Model.Columns)
                {
                    <th>@column.ColumnName</th> <!-- Display the column names in the table header -->
                }
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    @foreach (var item in row.ItemArray)
                    {
                        <td>@item</td> <!-- Display the cell values in the table body -->
                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="table-buttons">
        <button type="button" onclick="addLine()">Add Line</button>
        <button type="button" onclick="removeLine()">Remove Line</button>
    </div>
}

@section Scripts {
    <script>
        function addLine() {
            var newRow = document.createElement("tr"); // Create a new row element
            var table = document.querySelector("table tbody"); // Get the table body element

            // Modify the below code to add the desired number of columns
            for (var i = 0; i < 5; i++) {
                var newCell = document.createElement("td"); // Create a new cell element
                newCell.textContent = "New Value"; // Set the cell content
                newRow.appendChild(newCell); // Append the cell to the new row
            }

            table.appendChild(newRow); // Append the new row to the table body
        }

        function removeLine() {
            var table = document.querySelector("table tbody"); // Get the table body element
            var rows = table.querySelectorAll("tr"); // Get all the rows in the table

            if (rows.length > 0) {
                table.removeChild(rows[rows.length - 1]); // Remove the last row from the table
            }
        }
    </script>
}

<!-- Displays an error message if the wrong file type is uploaded or file access/path is denied -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert">
        @ViewBag.ErrorMessage
    </div>
}